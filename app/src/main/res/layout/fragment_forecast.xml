<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:stretchColumns="1"
    android:baselineAligned="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/temperature_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_temperature"/>

        <TextView
            android:id="@+id/weather_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_weather"/>

        <ImageView
            android:id="@+id/icon_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:contentDescription="@string/main_weather_icon"
            android:src="@drawable/weather_sunny" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">

        <TextView
            android:id="@+id/temperature_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_temperature"/>

        <TextView
            android:id="@+id/weather_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_weather"/>

        <ImageView
            android:id="@+id/icon_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:src="@drawable/weather_sunny"
            android:contentDescription="@string/main_weather_icon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">

        <TextView
            android:id="@+id/temperature_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_temperature"/>

        <TextView
            android:id="@+id/weather_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_weather"/>

        <ImageView
            android:id="@+id/icon_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:src="@drawable/weather_sunny"
            android:contentDescription="@string/main_weather_icon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">

        <TextView
            android:id="@+id/temperature_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_temperature"/>

        <TextView
            android:id="@+id/weather_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_weather"/>

        <ImageView
            android:id="@+id/icon_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:src="@drawable/weather_sunny"
            android:contentDescription="@string/main_weather_icon" />

    </LinearLayout>
</LinearLayout>