<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Weathercheck">
        <activity
            android:name=".view.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <fragment
            android:id="@+id/main_data"
            android:name="com.ertools.weather_check.view.MainDataFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="main_data" />
        <fragment
            android:id="@+id/second_data"
            android:name="com.ertools.weather_check.view.SecondDataFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="second_data "/>
        <fragment
            android:id="@+id/forecast"
            android:name="com.ertools.weather_check.view.ForecastFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="forecast" />


    </application>

</manifest>