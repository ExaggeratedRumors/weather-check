<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="25dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:gravity="center"
        android:fontFamily="monospace"
        android:text="@string/app_name"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="40sp"
        android:textAlignment="center"
        android:textColor="@color/on_background"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/rounded_surface"
        android:paddingHorizontal="5dp"
        android:fontFamily="monospace"
        android:text="@string/app_version"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="15sp"
        android:textAlignment="center"
        android:textColor="@color/on_surface"
        android:maxLines="1"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.6"
        android:padding="30dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/rounded_surface">

        <Button
            android:id="@+id/decision_current_location"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="@drawable/rounded_button"
            android:layout_margin="10dp"
            android:fontFamily="monospace"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/on_primary"
            android:text="@string/decision_current_location"/>

        <Button
            android:id="@+id/decision_input_location"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="@drawable/rounded_button"
            android:layout_margin="10dp"
            android:fontFamily="monospace"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/on_primary"
            android:text="@string/decision_input_new_location"/>

        <Spinner
            android:id="@+id/decision_locations"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/primary"
            android:layout_margin="10dp"
            android:fontFamily="monospace"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="20sp"
            android:tooltipText="Choose a location"
            android:textAlignment="center"
            android:textColor="@color/on_primary" />

        <Spinner
            android:id="@+id/decision_favorites_locations"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/primary"
            android:layout_margin="10dp"
            android:fontFamily="monospace"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="20sp"
            android:tooltipText="Choose a favorite location"
            android:textAlignment="center"
            android:textColor="@color/on_primary" />

    </TableLayout>


</LinearLayout>